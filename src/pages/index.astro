    <div class="max-w-7xl mx-auto p-6 grid grid-cols-1 md:grid-cols-3 grid-rows-2 gap-6">
      <!-- Left Column: Conversion Rate (spans 2 rows) -->
      <div class="bg-gradient-to-br from-purple-100 to-purple-300 p-6 rounded-xl row-span-2 flex flex-col justify-between">
